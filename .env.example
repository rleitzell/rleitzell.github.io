# Screenplay Analyzer Configuration
# Copy this file to .env and fill in your API keys

# LLM Provider Settings
LLM_PROVIDER=openai
MODEL_NAME=gpt-3.5-turbo
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
LOCAL_LLM_ENDPOINT=http://localhost:8080/v1/chat/completions

# Processing Settings
CHUNK_SIZE=2500
OVERLAP=300
LAYOUT_ENHANCEMENT=true

# Advanced Settings
FIRST_CHARS_FOR_HASH=200
FUZZY_SIMILARITY_THRESHOLD=0.85
INCLUDE_SCENE_NUMBER_IN_HASH=true
AUTO_BULK_TIME_INFERENCE=true